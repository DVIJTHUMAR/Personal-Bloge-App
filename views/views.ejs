<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Blogs</title>

    <link rel="stylesheet" href="style.css">

</head>

<body class="py-5">

    

    <div class="container">
        <div class="row">
        
            <% BlogCard.forEach(function(card,index){ %>
                <div class="card mb-3 mx-3 p-3 col-6    " style="max-width: 400px;">
                    <div class="row g-0">
                        <div class="col">
                            <div class="card-body text-center border border-1">
                                <h1 class="card-title  text-center text-uppercase text-info bg-dark "><%= card.title %></h1>
                                
                                <textarea class="" name="content" id="0"><%= card.content %></textarea>
                            </div>
                            <div class=" py-3 text-center">
                                <button class="btn btn-primary">
                                    <a href="/editBlog/<%= card.id %>" class="text-light">Edit</a>
                                </button>
                                ||
                                <button class="btn btn-danger">
                                    <a href="/deleteBlog/<%= card.id %>" class="text-light">Delete</a>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
          <div class="text-center">
            <button class="btn btn-primary col">
                <a href="/" class="text-light">Add Blog</a>
            </button>        
          </div>
        </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>